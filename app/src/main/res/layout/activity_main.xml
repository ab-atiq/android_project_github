<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#29914F"
                android:padding="20px"
                android:text="This is my first android project push in GitHub."
                android:textAlignment="center"
                tools:ignore="MissingConstraints" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit text"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/red"
                android:textCursorDrawable="@color/black">

            </EditText>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:background="@color/red"
                android:text="Click Me"
                android:drawableLeft="@drawable/button_img"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/low_res_img"
                android:scaleType="fitXY"></ImageView>

            <TextView
                android:typeface="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:text="My Name Is Abul Bashar Atiqur Rahman"
                android:textAlignment="center" />


            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/low_res_img"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>